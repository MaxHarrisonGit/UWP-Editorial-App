<Window x:Class="UWP_Editorial_App.FullScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UWP_Editorial_App"
        mc:Ignorable="d"
        Title="FullScreen" Height="300" Width="300"  WindowState="Maximized" WindowStyle="None">
    <Grid>

        <MediaElement  x:Name="MediaFile" Volume="75" MediaEnded="MediaFile_MediaEnded"/>
        <Slider HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="17" Width="81" ValueChanged="Slider_ValueChanged" Maximum="100" Value="75"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Click="ButtonBack"/>

    </Grid>
</Window>
