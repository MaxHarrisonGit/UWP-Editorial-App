<Window x:Class="UWP_Editorial_App.moreDetailPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UWP_Editorial_App"
        mc:Ignorable="d"
        Activated="Window_Activated"
        Title="moreDetailPage" Height="300" Width="300" WindowState="Maximized" WindowStyle="None" Background="Black">
    <Grid>
        
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <Grid x:Name="GridOfData" ScrollViewer.CanContentScroll ="True" >
                
            </Grid>
        </ScrollViewer>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Click="Close_Click"/>

        <Grid x:Name="TransGrid" Visibility="Visible"  Background="White" Opacity="100">
        </Grid>
    </Grid>
    
</Window>
